void barraCarga()
{
	char a = 219;
	for (int r = 1; r <= 25; r++)
	{
		for (int q = 0; q <= 100000020; q++);
		std::cout << a;
	}
}
void lluvia() 
{
	system("color a");
	int matriz[3][3] = { {10000000,11101110,10000110},{10010010,10100101,11111111},{10101010,11100011,10111111} };
	for (int l = 0; l < 50; l++)
	{
		for (int i = 0; i < 3; i++)
		{
			for (int j = 0; j < 3; j++)
			{
			std::cout << matriz[i][j];
			}
		}
		Sleep(25);
	}
	system("cls");
}
